<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <title>Karma</title>
  </head>
  <body>
    <div class="container">
        <h1>Orders for <%=vendorName%></h1>
        <hr>
        <div class="container">
            <div class="row">
                <div class="col">
                    <h2> INCOMPLETE : </h2>
                    <ul>
                        <% for (var i = 0; i < incompleteOrders.length; i++) { %>
                        
                        <li><%= incompleteOrders[i].user %>, total : $<%= incompleteOrders[i].total %>, (<%=incompleteOrders[i].code%>)</li>
                        <ul>
                            <% for (var j = 0; j < incompleteOrders[i].items.length; j++) {%>
                            
                            <li><%= incompleteOrders[i].items[j].item %>: $<%= incompleteOrders[i].items[j].price %>; 
                                Quantity : <%=incompleteOrders[i].items[j].quantity%></li>
                            
                            <% } %>
                            </ul>
                            <br />
                        <% } %>
                    </ul>
                </div>
                <div class="col">
                    <h2> COMPLETE : </h2>
                    <ul>
                        <% for (var i = 0; i < completeOrders.length; i++) { %>
                        
                        <li><%= completeOrders[i].user %>, total : $<%= completeOrders[i].total %>, (<%=completeOrders[i].code%>)</li>
                        <ul>
                            <% for (var j = 0; j < completeOrders[i].items.length; j++) {%>
                            
                            <li><%= completeOrders[i].items[j].item %>: $<%= completeOrders[i].items[j].price %>; 
                                Quantity : <%=completeOrders[i].items[j].quantity%></li>
                            
                            <% } %>
                            </ul>
                            <br />
                        <% } %>
                    </ul>
                </div>
            </div>
        </div>
