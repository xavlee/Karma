                        { 
                            lineTension : 0,
                            data: <%-JSON.stringify(dataset)%>,
                            label: "Orders",
                            borderColor: "#3e95cd",
                            fill: false
                        }]
                    },
                    options: {
                        title: {
                        display: true,
                        text: 'Number of Orders',
                        scales: {
                            yAxes: [{
                                id: "my-y-axis",
                                type: 'linear',
                                position: 'left',
                                ticks: {
                                    min : 0,
                                }
                            }]
                        }
                    }
                    }
                });
            </script>
        </div>
        
        <hr>
    
        <a href='/home'>return home</a>
    </div>
    

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
